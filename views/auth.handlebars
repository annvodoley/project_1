<form onsubmit="sendForm(this); return false;" action="/auth" method="post">
    <div class="mb-3">
        <input name="login" placeholder="Email" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <input name="pass" placeholder="Пароль" type="password" class="form-control">
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary form-control">
    </div>
</form>

<script>
    function sendForm(form) {
        let formData = new FormData(form);
        fetch('/auth', {
            method: 'post',
            body: formData
        }).then(response => response.text())
                .then(result => {
                    console.log(result);
                })
    }
</script>